@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider MaxWidth="MaxWidth.Small" FullWidth="true" CloseButton="true" />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Class="glass-panel mt-4 mx-4 mb-0 px-6" Style="border-radius: 20px; width: auto; top: 0; position: sticky; z-index: 100;">
        
        <MudImage Src="rioave.png" Alt="Rio Ave Logo" Height="45" Class="mr-6 py-2"/>
        
        <MudDivider Vertical="true" FlexItem="true" Class="mx-4" Style="height: 30px; align-self: center; border-color: rgba(255,255,255,0.3);" />

        <MudText Typo="Typo.h6" Style="font-weight: 600; letter-spacing: 1px;">
            GESTÃO DE SALAS
        </MudText>
        
        <MudSpacer />
        
        <MudIconButton Icon="@Icons.Material.Filled.Notifications" Color="Color.Inherit" Edge="Edge.End" />
        <MudIconButton Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit" Edge="Edge.End" Class="ml-2" />
    </MudAppBar>
    
    <MudMainContent Class="pt-8 px-6">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>