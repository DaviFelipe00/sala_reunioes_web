@inherits LayoutComponentBase
@rendermode InteractiveServer

<MudThemeProvider Theme="_currentTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary" Fixed="true">
        
        @* --- NOVO COMPONENTE: Botão de Menu Animado --- *@
        <MenuHamburguer IsOpen="_drawerOpen" OnClick="DrawerToggle" />
        @* ---------------------------------------------- *@
        
        <div class="d-flex align-center ml-2">
            <img src="rioave.png" alt="Rio Ave" style="height:32px;" class="mr-3" />
        </div>

        <MudSpacer />
        
        <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
            <NotificacoesMenu />
            <UserMenu />
        </MudStack>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2" Variant="@DrawerVariant.Responsive">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    private MudTheme _currentTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#002147", 
            Secondary = "#00509d",
            AppbarBackground = "#002147",
            DrawerBackground = "#001529", 
            DrawerText = "#FFFFFF",
            DrawerIcon = "#FFFFFF",
            Background = "#F4F7F9",
            ActionDefault = "#FFFFFF" 
        }
    };

    // Método que é chamado pelo evento OnClick do MenuHamburguer
    void DrawerToggle() => _drawerOpen = !_drawerOpen;
}