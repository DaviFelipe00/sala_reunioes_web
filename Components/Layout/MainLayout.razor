@inherits LayoutComponentBase

<MudThemeProvider Theme="_rioAveTheme" />
<MudPopoverProvider />
<MudDialogProvider FullWidth="true" MaxWidth="MaxWidth.Small" CloseButton="true" />
<MudSnackbarProvider />

<MudLayout>
    @* --- BARRA SUPERIOR (APPBAR) --- *@
    <MudAppBar Elevation="0" Class="glass-effect" Fixed="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Primary" Edge="Edge.Start" 
                       OnClick="@((e) => DrawerToggle())" Class="mr-4 d-md-none" />
        
        @* Logo Rio Ave *@
        <MudImage Src="rioave.png" Height="32" Alt="Rio Ave" Class="mr-3" />
        
        <MudSpacer />
        
        <div class="d-flex align-center">
            <MudTooltip Text="Notificações">
                <MudIconButton Icon="@Icons.Material.Outlined.Notifications" Color="Color.Primary" />
            </MudTooltip>

            @* MENU DO USUÁRIO *@
            <MudMenu AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight" Dense="true" Class="ml-2">
                <ActivatorContent>
                    <MudAvatar Color="Color.Primary" Variant="Variant.Filled" 
                               Style="width:35px; height:35px; cursor:pointer;">D</MudAvatar>
                </ActivatorContent>
                <ChildContent>
                    <MudMenuItem Icon="@Icons.Material.Filled.Person" href="/perfil">Meu Perfil</MudMenuItem>
                    <MudDivider />
                    @* O Logout no Identity exige um POST por segurança *@
                    <MudMenuItem>
                        <form action="Account/Logout" method="post" style="width: 100%;">
                            <AntiforgeryToken />
                            <input type="hidden" name="ReturnUrl" value="" />
                            <button type="submit" class="d-flex align-center" 
                                    style="background: none; border: none; width: 100%; color: var(--mud-palette-text-primary); cursor: pointer; padding: 0;">
                                <MudIcon Icon="@Icons.Material.Filled.Logout" Size="Size.Small" Class="mr-2" />
                                <MudText Typo="Typo.body2">Sair</MudText>
                            </button>
                        </form>
                    </MudMenuItem>
                </ChildContent>
            </MudMenu>
        </div>
    </MudAppBar>

    @* --- MENU LATERAL (DRAWER) --- *@
    <MudDrawer @bind-Open="_drawerOpen" 
               ClipMode="DrawerClipMode.Always" 
               Elevation="0" 
               Variant="@DrawerVariant.Responsive" 
               Class="rioave-sidebar-glass">
        
        <MudNavMenu Class="mt-4">
             <MudText Typo="Typo.overline" Class="px-4 mb-2" Style="color: rgba(255,255,255,0.5)">Navegação</MudText>
             
             <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard" IconColor="Color.Inherit">Agendamentos</MudNavLink>
             <MudNavLink Href="/calendario" Icon="@Icons.Material.Filled.CalendarMonth" IconColor="Color.Inherit">Calendário</MudNavLink>
             
             <MudText Typo="Typo.overline" Class="px-4 mt-6 mb-2" Style="color: rgba(255,255,255,0.5)">Configurações</MudText>
             <MudNavLink Href="/perfil" Icon="@Icons.Material.Filled.Person" IconColor="Color.Inherit">Meu Perfil</MudNavLink>
        </MudNavMenu>
        
        <MudSpacer />
        
        <div class="pa-4">
            <MudText Typo="Typo.caption" Style="color: rgba(255,255,255,0.3)">Rio Ave Corporate v1.0</MudText>
        </div>
    </MudDrawer>

    @* --- ÁREA DE CONTEÚDO PRINCIPAL --- *@
    <MudMainContent Class="pt-16 px-4">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
    private void DrawerToggle() => _drawerOpen = !_drawerOpen;

    private MudTheme _rioAveTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#003B5C",
            Secondary = "#007ACC",
            AppbarBackground = "#FFFFFF", 
            DrawerBackground = "#003B5C",
            TextPrimary = "#1A2C38",
            Surface = "#FFFFFF",
            Background = "#F0F2F5"
        },
        LayoutProperties = new LayoutProperties()
        {
            DefaultBorderRadius = "12px",
            DrawerWidthLeft = "260px"
        }
    };
}