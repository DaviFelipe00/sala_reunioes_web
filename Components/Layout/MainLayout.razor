@inherits LayoutComponentBase

<MudThemeProvider Theme="_currentTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    @* Fixed="true" garante que o header fique no topo, e o MudMainContent compensa o espaço *@
    <MudAppBar Elevation="1" Color="Color.Primary" Fixed="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        
        <div class="d-flex align-center ml-2">
            <img src="rioave.png" alt="Rio Ave" style="height:32px;" class="mr-3" />
        </div>

        <MudSpacer />
        
        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
            <MudIconButton Icon="@Icons.Material.Outlined.Notifications" Color="Color.Inherit" />
            <MudMenu AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight" Dense="true">
                <ActivatorContent>
                    <MudAvatar Color="Color.Secondary" Variant="Variant.Filled" Style="cursor:pointer">D</MudAvatar>
                </ActivatorContent>
                <ChildContent>
                    <MudMenuItem Href="/perfil" Icon="@Icons.Material.Filled.Person">Meu Perfil</MudMenuItem>
                    <MudDivider />
                    <MudMenuItem>
                        <form action="Account/Logout" method="post">
                            <AntiforgeryToken />
                            <button type="submit" class="logout-button">
                                <MudIcon Icon="@Icons.Material.Filled.Logout" Size="Size.Small" Class="mr-3" />
                                <MudText Typo="Typo.body2">Sair</MudText>
                            </button>
                        </form>
                    </MudMenuItem>
                </ChildContent>
            </MudMenu>
        </MudStack>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2" Variant="@DrawerVariant.Responsive">
        <MudNavMenu Class="mt-4">
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Outlined.SpaceDashboard">Agendamentos</MudNavLink>
            <MudNavLink Href="/calendario" Icon="@Icons.Material.Filled.CalendarMonth">Calendário</MudNavLink>
            <MudNavLink Href="/perfil" Icon="@Icons.Material.Filled.Person">Meu Perfil</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    @* O segredo do enquadramento está aqui *@
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    // Configuração do Tema para Azul Escuro
    private MudTheme _currentTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#002147", // Azul Escuro (Oxford Blue)
            Secondary = "#00509d",
            AppbarBackground = "#002147",
            DrawerBackground = "#001529",
            Background = "#F4F7F9"
        }
    };

    void DrawerToggle() => _drawerOpen = !_drawerOpen;
}