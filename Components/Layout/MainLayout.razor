@inherits LayoutComponentBase
@rendermode InteractiveServer

<MudThemeProvider Theme="_currentTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary" Fixed="true">
        @* Botão para abrir/fechar o menu lateral *@
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        
        @* Logo *@
        <div class="d-flex align-center ml-2">
            <img src="rioave.png" alt="Rio Ave" style="height:32px;" class="mr-3" />
        </div>

        <MudSpacer />
        
        <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
            @* 1. Componente de Notificações (Sino) *@
            <NotificacoesMenu />
            
            @* 2. Componente de Usuário (Avatar + Logout) *@
            <UserMenu />
        </MudStack>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2" Variant="@DrawerVariant.Responsive">
        @* 3. Componente de Navegação Lateral *@
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    // Definição do Tema (Azul Escuro Rio Ave)
    private MudTheme _currentTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#002147", 
            Secondary = "#00509d",
            AppbarBackground = "#002147",
            DrawerBackground = "#001529", 
            DrawerText = "#FFFFFF",
            DrawerIcon = "#FFFFFF",
            Background = "#F4F7F9",
            ActionDefault = "#FFFFFF" 
        }
    };

    void DrawerToggle() => _drawerOpen = !_drawerOpen;
}