@* Components/Layout/MainLayout.razor *@

@inherits LayoutComponentBase
@rendermode InteractiveServer

<MudThemeProvider Theme="_currentTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary" Fixed="true">
        
        @* 1. REMOVIDO: <MenuHamburguer ... /> *@
        
        <div class="d-flex align-center ml-4"> @* Ajustei ml-2 para ml-4 para dar margem já que não tem botão *@
            <img src="rioave.png" alt="Rio Ave" style="height:32px;" class="mr-3" />
        </div>

        <MudSpacer />
        
        <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
            <NotificacoesMenu />
            <UserMenu />
        </MudStack>
    </MudAppBar>

    @* 2. ALTERADO: Open="true" fixo e Variant="Persistent" *@
    <MudDrawer Open="true" 
               ClipMode="DrawerClipMode.Always" 
               Elevation="2" 
               Variant="@DrawerVariant.Persistent">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    // 3. REMOVIDO: A variável bool _drawerOpen e o método DrawerToggle() não são mais necessários
    
    private MudTheme _currentTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#002147", 
            Secondary = "#00509d",
            AppbarBackground = "#002147",
            DrawerBackground = "#001529", 
            DrawerText = "#FFFFFF",
            DrawerIcon = "#FFFFFF",
            Background = "#F4F7F9",
            ActionDefault = "#FFFFFF" 
        }
    };
}