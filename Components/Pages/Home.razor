@page "/"
@inject AgendamentoService AgendamentoService

<MudText Typo="Typo.h4" Class="mb-6">Dashboard de Salas</MudText>

@if (salas == null)
{
    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
}
else
{
    <MudGrid>
        @foreach (var sala in salas)
        {
            <MudItem xs="12" sm="6" md="4">
                <SalaCard Sala="sala" />
            </MudItem>
        }
    </MudGrid>
}

@code {
    private List<Sala>? salas;

    protected override async Task OnInitializedAsync()
    {
        // Carrega as salas e agendamentos via serviço
        salas = await AgendamentoService.ListarSalasComAgendamentosAsync();
    }
}