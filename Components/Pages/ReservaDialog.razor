@using SalaReunioes.Web.Domain.Entities
@using SalaReunioes.Web.Infrastructure.Services
@inject ISnackbar Snackbar
@inject AgendamentoService Service
@inject ConfiguracaoService ConfigService

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="@_success">
            <MudGrid>
                <MudItem xs="12">
                    @* 1. Immediate="true" valida e libera o botão a cada letra digitada *@
                    <MudTextField T="string" Label="Título da Reunião" 
                                  @bind-Value="Agendamento.Titulo" 
                                  Required="true" 
                                  RequiredError="O título é obrigatório."
                                  Variant="Variant.Outlined" 
                                  Margin="Margin.Dense"
                                  Immediate="true" /> 
                </MudItem>
                
                <MudItem xs="12">
                    <MudTextField T="string" Label="Responsável" 
                                  @bind-Value="Agendamento.Responsavel" 
                                  Required="true" 
                                  RequiredError="O responsável é obrigatório."
                                  Variant="Variant.Outlined" 
                                  Margin="Margin.Dense"
                                  Immediate="true" />
                </MudItem>

                <MudItem xs="12" sm="6">
                    <MudDatePicker Label="Data" 
                                   @bind-Date="_dataSelecionada" 
                                   DateFormat="dd/MM/yyyy"
                                   Variant="Variant.Outlined" Margin="Margin.Dense" 
                                   Editable="true" />
                </MudItem>

                <MudItem xs="6" sm="3">
                    <MudSelect T="TimeSpan" Label="Início" @bind-Value="_horaInicio" 
                               Variant="Variant.Outlined" Margin="Margin.Dense"
                               AnchorOrigin="Origin.BottomCenter">
                        @foreach (var horario in _horariosDisponiveis)
                        {
                            <MudSelectItem Value="@horario">@horario.ToString(@"hh\:mm")</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <MudItem xs="6" sm="3">
                    <MudSelect T="int" Label="Duração" @bind-Value="_duracaoMinutos"
                               Variant="Variant.Outlined" Margin="Margin.Dense"
                               AnchorOrigin="Origin.BottomCenter">
                        <MudSelectItem Value="30">30 min</MudSelectItem>
                        <MudSelectItem Value="60">1 hora</MudSelectItem>
                        <MudSelectItem Value="90">1h 30m</MudSelectItem>
                        <MudSelectItem Value="120">2 horas</MudSelectItem>
                        <MudSelectItem Value="180">3 horas</MudSelectItem>
                        <MudSelectItem Value="240">4 horas</MudSelectItem>
                        <MudSelectItem Value="480">Dia todo (8h)</MudSelectItem>
                    </MudSelect>
                </MudItem>

                <MudItem xs="12">
                    <MudText Typo="Typo.caption" Color="Color.Secondary">
                        @(string.IsNullOrEmpty(SalaNome) ? "" : $"Sala: {SalaNome} | ")
                        Previsão: 
                        <b>@_dataSelecionada?.ToString("dd/MM")</b> das 
                        <b>@_horaInicio.ToString(@"hh\:mm")</b> até 
                        <b>@_horaInicio.Add(TimeSpan.FromMinutes(_duracaoMinutos)).ToString(@"hh\:mm")</b>
                    </MudText>
                </MudItem>

            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Disabled="@(!_success || _processando)">
            @if (_processando)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
                <MudText Class="ms-2">Salvando...</MudText>
            }
            else
            {
                <MudText>Salvar Agendamento</MudText>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public Agendamento Agendamento { get; set; } = new();
    [Parameter] public Guid SalaId { get; set; }
    [Parameter] public string SalaNome { get; set; } = string.Empty;

    private MudForm _form = default!;
    private bool _success;
    private bool _processando = false;
    
    private DateTime? _dataSelecionada;
    private TimeSpan _horaInicio;
    private int _duracaoMinutos = 60;
    
    private List<TimeSpan> _horariosDisponiveis = new();

    // 2. Mudado para Async para buscar configuração do banco
    protected override async Task OnInitializedAsync()
    {
        // Busca horários reais de funcionamento (ex: 08:00 as 18:00)
        var config = await ConfigService.ObterConfiguracaoAsync();
        
        var inicioDia = new TimeSpan(config.HoraAbertura, 0, 0);
        var fimDia = new TimeSpan(config.HoraFechamento, 0, 0);

        _horariosDisponiveis.Clear();
        // Loop dinâmico
        while (inicioDia < fimDia)
        {
            _horariosDisponiveis.Add(inicioDia);
            inicioDia = inicioDia.Add(TimeSpan.FromMinutes(30));
        }

        // Lógica de Inicialização dos Campos
        if (Agendamento.Id != Guid.Empty) 
        {
            // Modo Edição
            _dataSelecionada = Agendamento.Inicio.Date;
            _horaInicio = Agendamento.Inicio.TimeOfDay;
            var diferenca = Agendamento.Fim - Agendamento.Inicio;
            _duracaoMinutos = (int)diferenca.TotalMinutes;
        }
        else
        {
            // Modo Novo Agendamento
            Agendamento.SalaId = SalaId;
            _dataSelecionada = DateTime.Today;
            
            var agora = DateTime.Now.TimeOfDay;
            
            // Seleciona o próximo horário livre HOJE ou joga para AMANHÃ
            var proximoHorario = _horariosDisponiveis.FirstOrDefault(h => h > agora);

            if (proximoHorario == default) // Se já passou do horário de fechar
            {
                _horaInicio = _horariosDisponiveis.FirstOrDefault(); // Pega o primeiro horário (ex: 08:00)
                _dataSelecionada = DateTime.Today.AddDays(1); // Joga para amanhã
            }
            else
            {
                _horaInicio = proximoHorario;
            }
        }
    }

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        await _form.Validate();
        
        if (_form.IsValid && _dataSelecionada.HasValue)
        {
            _processando = true;
            try
            {
                var dataBase = _dataSelecionada.Value;
                Agendamento.Inicio = dataBase.Date.Add(_horaInicio);
                Agendamento.Fim = Agendamento.Inicio.AddMinutes(_duracaoMinutos);
                
                // Validação de horário inválido
                if (Agendamento.Fim <= Agendamento.Inicio)
                {
                    Snackbar.Add("O horário de término deve ser maior que o início.", Severity.Warning);
                    return;
                }

                // Chama o serviço (que já tem Transação e trata Add ou Update internamente)
                var resultado = await Service.ReservarAsync(Agendamento);

                if (resultado.Sucesso)
                {
                    // Só mostra mensagem de sucesso se for criação (opcional, mas fica mais limpo)
                    if (Agendamento.Id == Guid.Empty) 
                        Snackbar.Add(resultado.Mensagem, Severity.Success);
                    
                    MudDialog.Close(DialogResult.Ok(Agendamento));
                }
                else
                {
                    Snackbar.Add(resultado.Mensagem, Severity.Error);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Erro crítico: {ex.Message}", Severity.Error);
            }
            finally
            {
                _processando = false;
            }
        }
    }
}