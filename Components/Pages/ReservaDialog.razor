@using MudBlazor
@using System.ComponentModel.DataAnnotations
@using SalaReunioes.Web.Domain.Entities
@using SalaReunioes.Web.Infrastructure.Services
@inject AgendamentoService AgendamentoService
@inject ISnackbar Snackbar

<MudDialog ClassActions="px-6 pb-6">
    <TitleContent>
        <MudText Typo="Typo.h6" Color="Color.Primary" Class="fw-bold d-flex align-center">
            <MudIcon Icon="@Icons.Material.Outlined.EditCalendar" Class="mr-2"/>
            Reservar @SalaNome
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="@_formIsValid">
            <MudContainer Class="px-0 py-2">
                <MudText Typo="Typo.body2" Style="color: var(--mud-palette-text-secondary)" Class="mb-4">
                    Preencha os detalhes da reunião abaixo.
                </MudText>
                
                <MudStack Spacing="4">
                    <MudTextField @bind-Value="novoAgendamento.Titulo" 
                                 Label="Título" 
                                 For="@(() => novoAgendamento.Titulo)"
                                 Variant="Variant.Outlined" 
                                 Margin="Margin.Dense" />

                    <MudTextField @bind-Value="novoAgendamento.Responsavel" 
                                 Label="Responsável" 
                                 For="@(() => novoAgendamento.Responsavel)"
                                 Variant="Variant.Outlined" 
                                 Margin="Margin.Dense" />

                    <MudDatePicker Label="Data" 
                                  @bind-Date="dataSelecionada" 
                                  Variant="Variant.Outlined" 
                                  Margin="Margin.Dense" 
                                  Color="Color.Primary" 
                                  MinDate="DateTime.Today" />

                    <MudStack Row="true">
                        <MudTimePicker Label="Início" 
                                      @bind-Time="horaInicio" 
                                      Variant="Variant.Outlined" 
                                      Margin="Margin.Dense" />

                        <MudTimePicker Label="Fim" 
                                      @bind-Time="horaFim" 
                                      Variant="Variant.Outlined" 
                                      Margin="Margin.Dense" />
                    </MudStack>
                </MudStack>
            </MudContainer>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">Cancelar</MudButton>
        <MudButton Color="Color.Secondary" 
                   Variant="Variant.Filled" 
                   OnClick="Submit" 
                   Class="px-6 rounded-lg"
                   Disabled="@(!_formIsValid)">Confirmar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    // MELHOR PRÁTICA: Uso do namespace completo (MudBlazor.MudDialogInstance)
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public Guid SalaId { get; set; }
    [Parameter] public string SalaNome { get; set; } = "";

    private MudForm _form = default!;
    private bool _formIsValid;
    private Agendamento novoAgendamento = new();
    
    // Configurações iniciais
    private DateTime? dataSelecionada = DateTime.Today;
    private TimeSpan? horaInicio = new TimeSpan(DateTime.Now.Hour + 1, 0, 0);
    private TimeSpan? horaFim = new TimeSpan(DateTime.Now.Hour + 2, 0, 0);

    // TimeZone do Brasil para garantir a conversão correta
    private static readonly TimeZoneInfo BrasiliaTimeZone = 
        TimeZoneInfo.FindSystemTimeZoneById("E. South America Standard Time");

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        await _form.Validate();

        if (_form.IsValid && dataSelecionada.HasValue && horaInicio.HasValue && horaFim.HasValue)
        {
            // Lógica de Datas: Combina a Data (Picker) com a Hora (TimePicker)
            var dataBase = dataSelecionada.Value.Date;

            // --- CORREÇÃO IMPORTANTE ---
            // O DateTime.Today cria uma data com Kind=Local.
            // O TimeZoneInfo.ConvertTimeToUtc exige que a origem seja Unspecified se o TimeZone de origem não for o Local.
            // Usamos DateTime.SpecifyKind para "limpar" o Kind da data, permitindo a conversão correta usando o fuso de Brasília.
            var inicioNaoEspecificado = DateTime.SpecifyKind(dataBase.Add(horaInicio.Value), DateTimeKind.Unspecified);
            var fimNaoEspecificado = DateTime.SpecifyKind(dataBase.Add(horaFim.Value), DateTimeKind.Unspecified);

            // Validação de horário inválido (Fim antes do Início)
            if (fimNaoEspecificado <= inicioNaoEspecificado)
            {
                Snackbar.Add("A hora final deve ser maior que a hora inicial.", Severity.Warning);
                return;
            }

            // Converter para UTC usando explicitamente o TimeZone de Brasília
            var inicioUtc = TimeZoneInfo.ConvertTimeToUtc(inicioNaoEspecificado, BrasiliaTimeZone);
            var fimUtc = TimeZoneInfo.ConvertTimeToUtc(fimNaoEspecificado, BrasiliaTimeZone);

            // Preenche o objeto
            // OBS: Não geramos o ID aqui (novoAgendamento.Id), deixamos o Service lidar com isso para saber que é insert.
            novoAgendamento.SalaId = SalaId;
            novoAgendamento.Inicio = inicioUtc;
            novoAgendamento.Fim = fimUtc;

            // Envia para o serviço
            var (sucesso, mensagem) = await AgendamentoService.ReservarAsync(novoAgendamento);

            if (sucesso) 
            {
                Snackbar.Add(mensagem, Severity.Success);
                MudDialog.Close(DialogResult.Ok(true));
            } 
            else 
            {
                Snackbar.Add(mensagem, Severity.Error);
            }
        }
        else
        {
            Snackbar.Add("Por favor, preencha todos os campos obrigatórios.", Severity.Warning);
        }
    }
}