@using SalaReunioes.Web.Domain.Entities
@using SalaReunioes.Web.Infrastructure.Services
@inject ISnackbar Snackbar
@inject AgendamentoService Service
@inject ConfiguracaoService ConfigService

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="@_success">
            <MudGrid>
                @* 1. Finalidade (Título) *@
                <MudItem xs="12">
                    <MudTextField T="string" Label="Finalidade da Reunião" 
                                  @bind-Value="Agendamento.Titulo" 
                                  Required="true" 
                                  RequiredError="A finalidade é obrigatória."
                                  Variant="Variant.Outlined" 
                                  Margin="Margin.Dense"
                                  Immediate="true" /> 
                </MudItem>
                
                @* 2. Responsável *@
                <MudItem xs="12">
                    <MudTextField T="string" Label="Responsável" 
                                  @bind-Value="Agendamento.Responsavel" 
                                  Required="true" 
                                  RequiredError="O responsável é obrigatório."
                                  Variant="Variant.Outlined" 
                                  Margin="Margin.Dense"
                                  Immediate="true" />
                </MudItem>

                @* 3. Cores com Nomes (Simplificado) *@
                <MudItem xs="12">
                    <MudSelect T="string" Label="Cor de Identificação" @bind-Value="Agendamento.Cor"
                               Variant="Variant.Outlined" Margin="Margin.Dense"
                               AnchorOrigin="Origin.BottomCenter">
                        @foreach (var cor in _coresDisponiveis)
                        {
                            <MudSelectItem Value="@cor.Hex">
                                <div class="d-flex align-center">
                                    <MudIcon Icon="@Icons.Material.Filled.Circle" Style="@($"color:{cor.Hex}; margin-right: 8px;")" Size="Size.Small"/>
                                    @cor.Nome
                                </div>
                            </MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <MudItem xs="12">
                    <MudDivider Class="my-2"/>
                    <MudText Typo="Typo.caption">Definição de Horário</MudText>
                </MudItem>

                @* 4. Data e Hora *@
                <MudItem xs="12" sm="4">
                    <MudDatePicker Label="Data" @bind-Date="_dataSelecionada" 
                                   DateFormat="dd/MM/yyyy" Variant="Variant.Outlined" Margin="Margin.Dense" 
                                   Editable="true" />
                </MudItem>

                <MudItem xs="6" sm="4">
                    <MudTextField T="TimeSpan?" Label="Início" @bind-Value="_horaInicio"
                                  InputType="InputType.Time"
                                  Variant="Variant.Outlined" Margin="Margin.Dense" 
                                  Required="true" />
                </MudItem>

                <MudItem xs="6" sm="4">
                    <MudTextField T="TimeSpan?" Label="Fim" @bind-Value="_horaFim"
                                  InputType="InputType.Time"
                                  Variant="Variant.Outlined" Margin="Margin.Dense" 
                                  Required="true" />
                </MudItem>

            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
        
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Disabled="@(_processando)">
            @if (_processando) { <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/> }
            else { <MudText>Salvar Agendamento</MudText> }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    
    [Parameter] public Agendamento Agendamento { get; set; } = new();
    [Parameter] public Guid SalaId { get; set; }
    [Parameter] public string SalaNome { get; set; } = string.Empty;
    
    // Recebe a data que o usuário estava visualizando na Home
    [Parameter] public DateTime DataInicial { get; set; } = DateTime.Today; 

    private MudForm _form = default!;
    private bool _success;
    private bool _processando = false;
    
    private DateTime? _dataSelecionada;
    private TimeSpan? _horaInicio;
    private TimeSpan? _horaFim;

    // Lista de cores com nomes de negócio
    public record OpcaoCor(string Nome, string Hex);
    private List<OpcaoCor> _coresDisponiveis = new()
    {
        new("Alinhamento", "#007ACC"),       // Azul
        new("Urgente", "#C62828"),           // Vermelho
        new("Cliente", "#2E7D32"),           // Verde
        new("Planejamento", "#F57C00"),      // Laranja
        new("Treinamento", "#7B1FA2")        // Roxo
    };

    protected override void OnInitialized()
    {
        if (Agendamento.Id != Guid.Empty) 
        {
            // Modo Edição
            _dataSelecionada = Agendamento.Inicio.Date;
            _horaInicio = Agendamento.Inicio.TimeOfDay;
            _horaFim = Agendamento.Fim.TimeOfDay;
        }
        else
        {
            // Modo Novo Agendamento
            Agendamento.SalaId = SalaId;
            
            // Usa a DataInicial passada pela Home para já abrir no dia certo
            _dataSelecionada = DataInicial; 
            
            var agora = DateTime.Now;
            
            // Se a data selecionada for hoje, sugere a próxima hora cheia.
            // Se for futuro (amanhã, mês que vem), sugere começar o dia às 08:00.
            if (DataInicial.Date == DateTime.Today)
            {
                _horaInicio = new TimeSpan(agora.Hour + 1, 0, 0); 
            }
            else
            {
                _horaInicio = new TimeSpan(8, 0, 0); 
            }
            
            _horaFim = _horaInicio.Value.Add(TimeSpan.FromHours(1));
            
            // Define uma cor padrão se não houver
            if (string.IsNullOrEmpty(Agendamento.Cor)) Agendamento.Cor = "#007ACC";
        }
    }

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        await _form.Validate();
        
        if (_form.IsValid && _dataSelecionada.HasValue && _horaInicio.HasValue && _horaFim.HasValue)
        {
            _processando = true;
            try
            {
                var dataBase = _dataSelecionada.Value;
                Agendamento.Inicio = dataBase.Date.Add(_horaInicio.Value);
                Agendamento.Fim = dataBase.Date.Add(_horaFim.Value);
                
                if (Agendamento.Fim <= Agendamento.Inicio)
                {
                    Snackbar.Add("O horário de término deve ser maior que o início.", Severity.Warning);
                    return;
                }

                var resultado = await Service.ReservarAsync(Agendamento);

                if (resultado.Sucesso)
                {
                    if (Agendamento.Id == Guid.Empty) Snackbar.Add(resultado.Mensagem, Severity.Success);
                    MudDialog.Close(DialogResult.Ok(Agendamento));
                }
                else
                {
                    Snackbar.Add(resultado.Mensagem, Severity.Error);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Erro: {ex.Message}", Severity.Error);
            }
            finally
            {
                _processando = false;
            }
        }
    }
}