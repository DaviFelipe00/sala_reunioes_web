@using SalaReunioes.Web.Domain.Entities
@using SalaReunioes.Web.Infrastructure.Services
@inject AgendamentoService AgendamentoService
@inject ISnackbar Snackbar

@* No MudBlazor v7, passamos a classe de ações aqui *@
<MudDialog ClassActions="px-6 pb-6">
    <TitleContent>
        <MudText Typo="Typo.h6" Color="Color.Primary" Class="fw-bold d-flex align-center">
            <MudIcon Icon="@Icons.Material.Outlined.EditCalendar" Class="mr-2"/>
            Reservar @SalaNome
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudContainer Class="px-0 py-2">
            @* CORREÇÃO: Style em vez de Color *@
            <MudText Typo="Typo.body2" Style="color: var(--mud-palette-text-secondary)" Class="mb-4">
                Preencha os detalhes da reunião abaixo.
            </MudText>
            <MudStack Spacing="4">
                <MudTextField @bind-Value="novoAgendamento.Titulo" Label="Título" Variant="Variant.Outlined" Margin="Margin.Dense" Required="true" />
                <MudTextField @bind-Value="novoAgendamento.Responsavel" Label="Responsável" Variant="Variant.Outlined" Margin="Margin.Dense" Required="true" />
                <MudDatePicker Label="Data" @bind-Date="dataSelecionada" Variant="Variant.Outlined" Margin="Margin.Dense" Color="Color.Primary" />
                <MudStack Row="true">
                    <MudTimePicker Label="Início" @bind-Time="horaInicio" Variant="Variant.Outlined" Margin="Margin.Dense" />
                    <MudTimePicker Label="Fim" @bind-Time="horaFim" Variant="Variant.Outlined" Margin="Margin.Dense" />
                </MudStack>
            </MudStack>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">Cancelar</MudButton>
        <MudButton Color="Color.Secondary" Variant="Variant.Filled" OnClick="Submit" Class="px-6 rounded-lg">Confirmar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public Guid SalaId { get; set; }
    [Parameter] public string SalaNome { get; set; } = "";

    private Agendamento novoAgendamento = new();
    private DateTime? dataSelecionada = DateTime.Today;
    private TimeSpan? horaInicio = new TimeSpan(DateTime.Now.Hour + 1, 0, 0);
    private TimeSpan? horaFim = new TimeSpan(DateTime.Now.Hour + 2, 0, 0);

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        if (dataSelecionada.HasValue && horaInicio.HasValue && horaFim.HasValue)
        {
            var inicioLocal = dataSelecionada.Value.Date + horaInicio.Value;
            var fimLocal = dataSelecionada.Value.Date + horaFim.Value;

            novoAgendamento.SalaId = SalaId;
            novoAgendamento.Inicio = inicioLocal.ToUniversalTime();
            novoAgendamento.Fim = fimLocal.ToUniversalTime();

            var (sucesso, mensagem) = await AgendamentoService.ReservarAsync(novoAgendamento);
            
            if (sucesso) {
                Snackbar.Add(mensagem, Severity.Success);
                MudDialog.Close(DialogResult.Ok(true));
            } else {
                Snackbar.Add(mensagem, Severity.Error);
            }
        }
    }
}